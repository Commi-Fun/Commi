# AI Airdrop Backend Environment Configuration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017
DB_NAME=ai_airdrop
DATABASE_URL="postgresql://username:password@localhost:5432/your_database"

# Production Database User (optional - for production deployments)
DB_APP_USER=aiapp
DB_APP_PASSWORD=secure_password_here

# Environment
NODE_ENV=development

# Twitter API Configuration (RapidAPI)
RAPIDAPI_KEY=your_rapidapi_key_here

# Application Configuration
PORT=3000
LOG_LEVEL=info

# NFT/Solana Configuration (for future use)
SOLANA_NETWORK=devnet
SOLANA_PRIVATE_KEY=your_solana_private_key_here

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=300
CRAWLER_INTERVAL_MINUTES=60

# Data Retention
TWEET_RETENTION_DAYS=30

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Crawler Configuration
CRAWLER_CRON="0 */1 * * *"
MAX_CONCURRENT_TASKS=50
POLLING_INTERVAL=10000