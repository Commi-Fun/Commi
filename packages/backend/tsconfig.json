{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "paths": {
      "@commi-dashboard/db": [
        "../db/src"
      ],
      "@commi-dashboard/common": [
        "../common/src"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../db"
    },
    {
      "path": "../common"
    }
  ]
}